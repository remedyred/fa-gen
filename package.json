{
	"name": "@snickbit/fa-gen",
	"version": "1.1.72",
	"description": "Easily generate tree-shaken Font Awesome library loader files for Vue.js",
	"keywords": [
		"font-awesome",
		"fontawesome",
		"generator",
		"cli",
		"vue"
	],
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"bin": {
		"fa": "./bin/fa"
	},
	"files": [
		"dist",
		"bin"
	],
	"scripts": {
		"build": "pnpm run clean && pnpm build:cli && pnpm build:lib",
		"build:cli": "pnpm run bundle:cli",
		"build:lib": "tsup --minify --dts",
		"bundle:cli": "esbuild src/cli.ts --bundle --outfile=bin/fa --target=node12 --platform=node --external:@fortawesome/*",
		"bundle:lib": "tsup",
		"clean": "shx rm -rf ./dist ./bin ./.types",
		"dev": "pnpm run clean && pnpm run dev:cli && pnpm run dev:lib && pnpm run dev:types",
		"dev:cli": "pnpm run bundle:cli --sourcemap",
		"dev:lib": "pnpm run bundle:lib",
		"dev:types": "tsc --project ./tsconfig.types.json",
		"index": "indexer",
		"schema": "pnpm dlx get-graphql-schema https://api.fontawesome.com > schema.graphql",
		"start": "node bin/fa",
		"watch": "pnpm run clean && concurrently -k -c magenta,cyan,green pnpm:watch:*",
		"watch:cli": "pnpm run dev:cli --watch",
		"watch:lib": "pnpm run dev:lib --watch",
		"watch:types": "pnpm run dev:types --watch"
	},
	"jest": {
		"onlyChanged": true,
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@fortawesome/fontawesome-common-types": "~6.1.1",
		"@fortawesome/fontawesome-svg-core": "~6.1.1",
		"@snickbit/node-cli": "~3.0.4",
		"@snickbit/node-utilities": "~4.4.2",
		"@snickbit/out": "~2.0.37",
		"@snickbit/utilities": "~3.4.0",
		"@urql/core": "~2.5.0",
		"graphql": "~16.5.0",
		"isomorphic-unfetch": "~3.1.0"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.2",
		"@snickbit/indexer": "2.5.7",
		"@types/node": "18.6.4",
		"concurrently": "7.3.0",
		"eslint": "8.22.0",
		"tsup": "6.2.3",
		"typescript": "4.7.4"
	},
	"optionalDependencies": {
		"quasar": ">= 2.7.3",
		"vue": ">= 3.2.37"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
