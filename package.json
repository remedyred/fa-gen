{
	"name": "@snickbit/fa-gen",
	"description": "Easily generate tree-shaken Font Awesome library loader files for Vue.js",
	"version": "1.1.35",
	"license": "MIT",
	"keywords": [
		"font-awesome",
		"fontawesome",
		"generator",
		"cli",
		"vue"
	],
	"bin": {
		"fa": "./bin/fa.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"bin"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node bin/fa.js",
		"clean": "shx rm -rf bin dist",
		"index": "indexer src/actions",
		"build": "npm run clean && npm run build:lib && npm run build:cli",
		"build:lib": "tsup",
		"build:cli": "esbuild src/cli.js --bundle --outfile=bin/fa.js --target=node12 --platform=node --external:@fortawesome/*",
		"build:meta": "npm run build:cli --minify --metafile=.meta.json",
		"watch": "concurrently -n lib,cli \"npm run watch:lib\" \"npm run watch:cli\"",
		"watch:lib": "npm run build:lib --watch",
		"watch:cli": "npm run build:cli --watch",
		"depcheck": "depcheck",
		"prod": "npm run clean && concurrently -n lib,cli \"npm run build:lib --minify\" \"npm run build:cli --minify\""
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.1.1",
		"@snickbit/node-cli": "^1.0.26",
		"@snickbit/node-utilities": "^4.2.21",
		"@snickbit/out": "^2.0.7",
		"@snickbit/utilities": "^3.0.7",
		"@urql/core": "^2.4.4",
		"graphql": "^16.3.0",
		"isomorphic-unfetch": "^3.1.0",
		"lodash": "^4.17.21",
		"mkdirp": "^1.0.4"
	},
	"optionalDependencies": {
		"quasar": "^2.6.0",
		"vue": "^2.6.10"
	},
	"devDependencies": {
		"@remedyred/indexer": "^2.0.70",
		"concurrently": "^7.1.0",
		"tsup": "^5.12.6",
		"typescript": "^4.6.3"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.js"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
